<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE8E8E8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFD8D8D8"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gvFileBrowserViewHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4" >
        </GridView>

        <TextView
            android:id="@+id/tvCurrentDir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF333333" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#FF888888" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvFileList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cacheColorHint="#E8E8E8"
        android:divider="#FFCCCCCC"
        android:dividerHeight="0.5dp" >
    </ListView>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFD8D8D8"
        android:text=" "
        android:textColor="#FF333333" />

    <com.tencent.exmobwin.banner.TAdView
        xmlns:mobwin="http://mobwin.android.com/apk/res/com.tencent.mobwin.plutin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>